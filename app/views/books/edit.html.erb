<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %><br>
  </div>
  <div class="field">
    <%= f.submit"Update Book" %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book) %>

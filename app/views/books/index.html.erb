<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>show</td>
          <td>edit</td>
          <td>destroy</td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@new_book, local:true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :body %><br>
  <%= f.text_area :body %><br>
  <%= f.submit"Create Book" %>
<% end %>